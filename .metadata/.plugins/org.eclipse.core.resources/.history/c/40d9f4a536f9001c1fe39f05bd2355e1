	public void registerAirline(@RequestBody AirlineRequest airlineRequest) {
		airlineService.registerNewAirline(airlineRequest);

	}

	@PostMapping
	public void addFlightDetails(@RequestBody FlightRequest flightRequest) {

	}
}
