package com.flightapp.inventoryservice.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.flightapp.inventoryservice.service.InventoryService;

import lombok.RequiredArgsConstructor;

@RestController
@RequestMapping("/api/inventory")
@RequiredArgsConstructor
public class InventoryController {
	
	private final InventoryService inventoryService;
	
	@GetMapping("/flightId={flightId}&seat={seat}")
	public boolean checkAvailability(@PathVariable("flightId") String flightId,@PathVariable("seat") String seats) {
		return inventoryService.checkSeatAvailability(flightId,seats);
		
	}

}
