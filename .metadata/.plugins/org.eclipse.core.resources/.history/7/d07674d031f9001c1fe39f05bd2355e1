package com.flightapp.inventoryservice.service.impl;

import org.springframework.stereotype.Service;

import com.flightapp.inventoryservice.constants.FlightStatusEnum;
import com.flightapp.inventoryservice.repository.InventoryRepository;
import com.flightapp.inventoryservice.service.InventoryService;

import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
public class InventoryServiceImpl implements InventoryService{

	private final InventoryRepository inventoryRepository;
	
	@Override
	public boolean checkSeatAvailability(String flightId) {
		inventoryRepository.findByFlightIdAndStatus(flightId,FlightStatusEnum.ACTIVE.getStatus());
		return false;
	}
	

}
